{
  "reporter": [
    "text",
    "text-summary",
    "html",
    "lcov"
  ],
  "extension": [
    ".ts"
  ],
  "include": [
    "**/lib/*.ts",
    "**/index.ts"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/coverage/**",
    "**/dist/**/*",
    "**/test/**/*",
    "**/lib/sow-project-template.ts",
    "**/*.d.ts"
  ],
  "require": [
    "ts-node/register"
  ],
  "sourceMap": true,
  "instrument": true,
  "check-coverage": false,
  "cache": true
}